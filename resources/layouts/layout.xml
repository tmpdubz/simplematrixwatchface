      id="Date"
      x="center"
      y="15%"
      font="@Fonts.matrixTypeDisplay32px"
      justification="Graphics.TEXT_JUSTIFY_CENTER"
     />
    <label
      id="HoursAndMinutes"
      x="center"
      y="center"
      font="@Fonts.matrixTypeDisplay100px"
